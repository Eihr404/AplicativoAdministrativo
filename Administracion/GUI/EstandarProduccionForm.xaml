<Window x:Class="Administracion.GUI.EstandarProduccionForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Formulario Estándar" Height="350" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Materia Prima:"/>
            <ComboBox x:Name="cmbMateriaPrima" Margin="0,5,0,15" 
                      DisplayMemberPath="MtpNombre" 
                      SelectedValuePath="MtpCodigo"/>

            <TextBlock Text="Producto:"/>
            <ComboBox x:Name="cmbProducto" Margin="0,5,0,15" 
                      DisplayMemberPath="ProNombre" 
                      SelectedValuePath="ProCodigo"/>

            <TextBlock Text="Cantidad Necesaria:"/>
            <TextBox x:Name="txtCantidad" Margin="0,5,0,15"/>

            <TextBlock Text="Observaciones/Descripción:"/>
            <TextBox x:Name="txtDescripcion" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,5,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnGuardar" Content="Guardar" Width="100" Margin="10,0" Click="btnGuardar_Click"/>
                <Button x:Name="btnCancelar" Content="Cancelar" Width="100" Margin="10,0" Click="btnCancelar_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
