<Window x:Class="Administracion.GUI.MateriaPrimaForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro de Materia Prima" Height="400" Width="350" WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="NUEVA MATERIA PRIMA" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <Label Content="Código (MTP_CODIGO):"/>
            <TextBox x:Name="txtCodigo" Margin="0,0,0,10"/>

            <Label Content="Unidad de Medida (UME_CODIGO):"/>
            <TextBox x:Name="txtUnidad" Margin="0,0,0,10" MaxLength="7"/>

            <Label Content="Nombre:"/>
            <TextBox x:Name="txtNombre" Margin="0,0,0,10"/>

            <Label Content="Descripción:"/>
            <TextBox x:Name="txtDescripcion" Margin="0,0,0,10" Height="50" TextWrapping="Wrap"/>

            <Label Content="Precio de Compra:"/>
            <TextBox x:Name="txtPrecio" Margin="0,0,0,15"/>

            <UniformGrid Columns="2">
                <Button x:Name="btnGuardar" Content="Guardar" Margin="5" Click="btnGuardar_Click" Background="#FFDEFADE"/>
                <Button x:Name="btnCancelar" Content="Cancelar" Margin="5" Click="btnCancelar_Click"/>
            </UniformGrid>
        </StackPanel>
    </Grid>
</Window>
