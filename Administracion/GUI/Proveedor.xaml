<UserControl x:Class="Administracion.GUI.Proveedor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="450"
             Width="800">


    <Grid Margin="10" Grid.Row="3">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- DataGrid de Proveedores -->
        <DataGrid
            x:Name="dgProveedores"
            Grid.Row="0"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            SelectionMode="Single"
            SelectionUnit="FullRow"
            CanUserAddRows="False"
            Margin="0,0,0,70">

            <DataGrid.Columns>
                <DataGridTextColumn
                    Header="ID"
                    Binding="{Binding PrvCodigo}"
                    Width="Auto"/>

                <DataGridTextColumn
                    Header="Nombre"
                    Binding="{Binding PrvNombre}"
                    Width="*"/>

                <DataGridTextColumn
                    Header="RUC"
                    Binding="{Binding EmpCedulaRuc}"
                    Width="*"/>

                <DataGridTextColumn
                    Header="Teléfono"
                    Binding="{Binding PrvTelefono}"
                    Width="*"/>

            </DataGrid.Columns>

        </DataGrid>

        <!-- Botones de acción -->
        
        <StackPanel
            Orientation="Horizontal"
            HorizontalAlignment="Right" 
            Grid.RowSpan="2" 
     
            VerticalAlignment="Bottom">

            <Button
                Content="Crear"
                Width="90"
                Margin="5"/>

            <Button
                Content="Editar"
                Width="90"
                Margin="5"/>

            <Button
                Content="Eliminar"
                Width="90"
                Margin="5"/>

            
            <StackPanel Orientation="Vertical" Grid.RowSpan="2">
                <Label Content="Ingrese una Cedula/Ruc para buscar"/>
                <TextBox TextWrapping="Wrap" Text="" Width="192" Margin="2" Height="25"/>

            </StackPanel>
            <Button Content="Buscar" Width="90"/>
        </StackPanel>

            
            


    </Grid>

</UserControl>

