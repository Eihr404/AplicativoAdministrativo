<UserControl x:Class="Administracion.GUI.EstandarProduccion"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Administracion.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="edpGrid">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="spEstandarProduccion" HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal" Grid.RowSpan="1">
            <TextBox x:Name="edpTxtblBuscarCodigo" TextWrapping="Wrap" Width="250"/>
            <Button x:Name="edpBtnConsultar" Content="Consultar" Margin="5,0,0,0" Click="edpBtnConsultar_Click"/>
            <Button x:Name="edpBtnIngresar" Content="Ingresar" Margin="5,0,0,0" Click="edpBtnIngresar_Click"/>
            <Button x:Name="edpBtnModificar" Content="Modificar" Margin="5,0,0,0" Click="edpBtnModificar_Click"/>
            <Button x:Name="edpBtnEliminar" Content="Eliminar" Margin="5,0,0,0" Click="edpBtnEliminar_Click"/>
        </StackPanel>

        <DataGrid x:Name="edpDatGri" 
                  Grid.Row="1" 
                  AutoGenerateColumns="False" 
                  SelectionMode="Single" 
                  IsReadOnly="True" Height="400">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="edpDatGriColMtpCodigo" Header="Cód. Materia Prima"
                                    Binding="{Binding MtpCodigo}"
                                    Width="Auto"/>
                <DataGridTextColumn x:Name="edpDatGriColProCodigo" Header="Cód. Producto"
                                    Binding="{Binding ProCodigo}"
                                    Width="Auto"/>
                <DataGridTextColumn x:Name="edpDatGriColDescrip" Header="Descripción"
                                    Binding="{Binding EdpDescripcion}"
                                    Width="*"/>
                <DataGridTextColumn x:Name="edpDatGriColCantidad" Header="Cantidad"
                                    Binding="{Binding EdpCantidad}"
                                    Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>