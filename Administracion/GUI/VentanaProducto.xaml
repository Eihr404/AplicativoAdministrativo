<UserControl x:Class="Administracion.GUI.VentanaProducto"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Administracion.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="prdGrid">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>

        <!-- Botones de acción -->
        <StackPanel x:Name="spProducto" HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal" Grid.RowSpan="1">
            <TextBox x:Name="prdTxtblBuscarCodigo" TextWrapping="Wrap" Width="250"/>
            <Button x:Name="prdBtnConsultar" Content="Consultar" Margin="5,0,0,0" Click="prdBtnConsultar_Click"/>
            <Button x:Name="prdBtnIngresar" Content="Ingresar" Margin="5,0,0,0" Click="prdBtnIngresar_Click"/>
            <Button x:Name="prdBtnModificar" Content="Modificar" Margin="5,0,0,0" Click="prdBtnModificar_Click"/>
            <Button x:Name="prdBtnEliminar" Content="Eliminar" Margin="5,0,0,0" Click="prdBtnEliminar_Click"/>
        </StackPanel>

        <!-- DataGrid de Productos -->
        <DataGrid x:Name="prdDatGri" 
                  Grid.Row="1" 
                  AutoGenerateColumns="False" 
                  SelectionMode="Single" 
                  IsReadOnly="True" Height="400">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="prdDatGriColCodigo" Header="Código"
                                    Binding="{Binding Codigo}"
                                    Width="Auto"/>
                <DataGridTextColumn x:Name="prdDatGriColCateg" Header="Categoría"
                    Binding="{Binding CategoriaDescripcion}"
                    Width="Auto"/>
                <DataGridTextColumn x:Name="prdDatGriColClase" Header="Clase"
                    Binding="{Binding ClaseDescripcion}"
                    Width="Auto"/>
                <DataGridTextColumn x:Name="prdDatGriColUniMed" Header="Unidad de medida"
                    Binding="{Binding UnidadMedidaDescripcion}"
                    Width="Auto"/>
                <DataGridTextColumn x:Name="prdDatGriColNombre" Header="Nombre"
                    Binding="{Binding Nombre}"
                    Width="Auto"/>
                <DataGridTextColumn x:Name="prdDatGriColDescrip" Header="Descripción"
                    Binding="{Binding Descripcion}"
                    Width="Auto"/>
                <DataGridTextColumn x:Name="prdDatGriColPrecio" Header="Precio de venta"
                    Binding="{Binding PrecioVenta}"
                    Width="Auto"/>
                <DataGridTextColumn x:Name="prdDatGriColPrecioAnt" Header="Precio de venta anterior"
                    Binding="{Binding PrecioVentaAnt}"
                    Width="Auto"/>
                <DataGridTextColumn x:Name="prdDatGriColUtilidad" Header="Utilidad"
                    Binding="{Binding Utilidad}"
                    Width="Auto"/>
                <DataGridTextColumn x:Name="prdDatGriColImagen" Header="Imagen"
                    Binding="{Binding Imagen}"
                    Width="Auto"/>
                <DataGridTextColumn x:Name="prdDatGriColAltText" Header="Imagen - Texto alternativo"
                    Binding="{Binding AltTextImagen}"
                    Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
        

    </Grid>
</UserControl>
